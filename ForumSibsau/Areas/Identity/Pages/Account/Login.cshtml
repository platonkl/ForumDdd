@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<form class="row justify-content-center" id="account" method="post">
    <div class="container reg_form">
        <h2 class="col-12">Авторизация</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="mb-3 col-12 col-md-4">
            <label asp-for="Input.Email" for="formGroupExampleInput" class="form-label">Ваш логин</label>
            <input asp-for="Input.Email" type="text" class="form-control" id="formGroupExampleInput">
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="w-100"></div>
        <div class="mb-3 col-12 col-md-4">
            <label asp-for="Input.Password" for="exampleInputPassword1" class="form-label">Пароль</label>
            <input asp-for="Input.Password" type="password" class="form-control" id="exampleInputPassword1" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="w-100"></div>
        <div class="checkbox mb-3">
            <label asp-for="Input.RememberMe" class="form-label">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
        <div class="w-100"></div>
        <div>
            <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
            <a href="~/Auth/SignUp">Зарегистрироваться</a>
        </div>
    </div>
    <div>
        <p>
            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
        </p>
        <p>
            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
        </p>
        <p>
            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
        </p>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
