<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Форум</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/1b94797836.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="~/css/styles.css">
</head>

<body>

    <header>
        <div class="top-header">
            <div class="logo-text">
                <a href="~/Home/Recently">
                    <img src="https://play-lh.googleusercontent.com/NEYGtRqajdpz1mJ0GOhxQOBaD_VxKGi-yXhx8uGcwgyAGDv8Ohqql7Q4rpnv5hM1-ZAA"
                         alt="" class="leftpic">
                </a>
                <h1>
                    <span class="caption">Sibsau Forum</span>
                </h1>
            </div>
            <div class="buttons_auth_reg">
                <div class="auth_button">
                    <a class="button-secondary" href="~/Auth/SignIn">Войти</a>
                </div>
                <div class="reg_button">
                    <form action="reg.html" target="_blank">
                        <a class="button-secondary2" href="~/Auth/SignUp">Создать аккаунт</a>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <div class="wrapper">
        <div class="search_wrap search_wrap_2">
            <div class="search_box">
                <div class="btn btn_common">
                    <i class="fas fa-search"></i>
                </div>
                <input type="text" class="input" placeholder="Поиск...">
            </div>
        </div>
        <div class="content">
            @RenderBody()
        </div>
        <div class="sideBar">
            <div class="widget-login">
                <ul class="sortBarSide">
                    <li class="page-item">
                        <a href="#">Мои темы</a>
                    </li>
                </ul>
                <div class="own-topics">
                    <div class="own-topic-first">
                        <h3 class="topic-title">Название темы 1</h3>
                        <p class="topic-content">Описание темы 1</p>
                    </div>

                    <div class="own-topic">
                        <h3 class="topic-title">Название темы 2</h3>
                        <p class="topic-content">Описание темы 2</p>
                    </div>

                    <div class="own-topic">
                        <h3 class="topic-title">Название темы 3</h3>
                        <p class="topic-content">Описание темы 3</p>
                    </div>
                </div>
                <div class="widget-login btns">
                    <button type="button" class="btn btn-primary">
                        <i class="fa-solid fa-plus"></i>
                    </button>
                    <button type="button" class="btn btn-primary">
                        <i class="fa-solid fa-ellipsis"></i>
                    </button>
                </div>
            </div>

        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>